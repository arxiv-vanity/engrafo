#!/usr/bin/env node
require("dotenv").config();
const program = require("commander");
const server = require("../src/converter/server");

program
  .version("0.0.1")
  .usage("[options] <tex file>")
  .parse(process.argv);

if (program.args.length != 1) {
  program.outputHelp();
  process.exit(1);
}

server.start(program.args[0]);
